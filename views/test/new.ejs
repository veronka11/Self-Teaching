<div class="container" style="margin-top: 80px;" xmlns="http://www.w3.org/1999/html">

  <form action="/user/create" method="POST" class="form-horizontal" id="formular">
    <fieldset id="polia">

      <!-- Form Name -->
      <legend><h3>New Test</h3></legend>

      <% if(flash && flash.err) { %>
      <ul class="alert alert-success">
        <% Object.keys(flash.err).forEach(function(error) { %>
        <li><%- JSON.stringify(flash.err[error]) %></li>
        <% }) %>
      </ul>
      <% } %>

      <% if(flash.message) { %>
      <div class="alert alert-success">
        <strong>Success!</strong> You have successfully created a new Test.
      </div>
      <% } %>

      <!-- Text input-->
      <div class="form-group">
        <div class="col-md-3"></div>
        <div class="col-md-6">
          <input id="" name="name" type="text" placeholder="Name of Test" class="form-control">
        </div>
        <div class="col-md-3"></div>
      </div>

      <!-- Text input-->
      <div class="form-group">
        <div class="col-md-3"></div>
        <div class="col-md-6">
          <input name="word_translation" type="text" placeholder="Word's Transation" class="form-control">
        </div>
        <div class="col-md-3"></div>
      </div>

      <!-- Password input-->
      <div class="form-group">
        <div class="col-md-3"></div>
        <div class="col-md-6">
          <input name="public" type="public" placeholder="public" class="form-control">
        </div>
        <div class="col-md-3"></div>
      </div>

      <!-- Text input-->
      <div class="form-group">
        <div class="col-md-3"></div>
        <div class="col-md-6" style="text-align: left; margin-bottom: 20px;">
          <label class="col-md-3 control-label" for="radios">Category</label>
          <div class="col-md-8">
            <div class="radio">
              <label for="radios-1">
                <input type="radio" name="radios" id="radios-0" value="1" checked="checked">
                Random from all category
              </label>
            </div>
            <div class="radio">
              <label for="radios-1">
                <input type="radio" name="radios" id="radios-1" value="2">
                Specific category
              </label>
            </div>
          </div>
        </div>
        <div class="col-md-3"></div>
      </div>


      <!-- Button -->
      <div class="form-group">
        <div class="col-md-3"></div>
        <div class="col-md-6">
          <input type="submit" class="btn btn-lg btn-primary btn-block" value="Create new Test"/>
          <input type="hidden" name="_csrf" value="<%= _csrf %>"/>
        </div>
        <div class="col-md-3"></div>
      </div>

    </fieldset>
  </form>

</div>
