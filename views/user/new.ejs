<div class = "container" style = "margin-top: 80px;">

	<form action="/user/create" method="POST" class="form-horizontal" id="formular">
    <fieldset id="polia">

        <!-- Form Name -->
        <legend>Create an account</legend>

		<% if(flash && flash.err) { %>
			<ul class="alert alert-success">
		<% Object.keys(flash.err).forEach(function(error) { %>
			<li><%- JSON.stringify(flash.err[error]) %></li>
		<% }) %>
		</ul>
		<% } %>

        <!-- Text input-->
        <div class="form-group">
			<div class="col-md-3"></div>
            <div class="col-md-6">
                <input id="" name="name" type="text" placeholder="Name" class="form-control">
            </div>
			<div class="col-md-3"></div>
        </div>

        <!-- Text input-->
        <div class="form-group">
			<div class="col-md-3"></div>
            <div class="col-md-6">
                <input name="email" type="text" placeholder="Email" class="form-control">
            </div>
			<div class="col-md-3"></div>
        </div>

        <!-- Password input-->
        <div class="form-group">
			<div class="col-md-3"></div>
            <div class="col-md-6">
                <input name="password" type="password" placeholder="password" class="form-control">
            </div>
			<div class="col-md-3"></div>
        </div>


        <!-- Button -->
        <div class="form-group">
			<div class="col-md-3"></div>
            <div class="col-md-6">
				<input type="submit" class="btn btn-lg btn-primary btn-block" value="Create Account" />
				<input type="hidden" name="_csrf" value="<%=_csrf %>" />
            </div>
			<div class="col-md-3"></div>
        </div>

		</fieldset>
	</form>

</div>
